<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlipZon.Views.ContentViews.NoInternetAccessScreen">
    <Grid RowDefinitions="Auto,*"
          RowSpacing="10"
          Padding="30"
          VerticalOptions="CenterAndExpand"
          HorizontalOptions="CenterAndExpand">
        <Image Source="dog"
               Aspect="Fill" />
        <VerticalStackLayout Grid.Row="1"
                             VerticalOptions="CenterAndExpand"
                             HorizontalOptions="CenterAndExpand"
                             Spacing="10">
            <Label Text="OOPS! NO INTERNET"
                   FontSize="20"
                   TextColor="{AppThemeBinding Light={x:StaticResource BlackColor},Dark={x:StaticResource DarkBlackColor}}"
                   FontAttributes="Bold" />
            <Label Text="Please check your network connection"
                   TextColor="{AppThemeBinding Light={x:StaticResource BlackColor},Dark={x:StaticResource DarkBlackColor}}" />
            <Button Text="Try Again"
                    BackgroundColor="Orange" />
        </VerticalStackLayout>
    </Grid>
</ContentView>